@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div id="chatPage" class="chat-container">
    <div class="chat-header">
        <h2 id="chatGroupName">Chat</h2>
        <div class="user-info">
            <span id="connectionState" class="badge text-bg-danger"></span>
        </div>
    </div>
    <div id="chatMessages" class="chat-messages"></div>
    <div class="typing"><div id="typing" class="jumping-dots-loader d-none"> <span></span> <span></span> <span></span> </div></div>
    <div class="chat-input">
        <input type="text" id="chatInput" placeholder="Type your message here...">
        <button id="send" onclick="sendMessage()">Send</button>
    </div>
</div>